                    android:id="@+id/stats_account_purchases_diamonds6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>