<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:animateLayoutChanges="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/optimiser_currentrelics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_currentrelics"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/optimiser_nextbreakpoint"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_breakpointstage"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/optimiser_prestigerelics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_prestigerelics"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/optimiser_breakpointrelics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_nextbreakpointrelics"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:shrinkColumns="0,1,2,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/optimiser_dmgbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_dmgbutton"/>

            <Button
                android:text="@string/optimiser_goldbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_goldbutton"/>

            <Button
                android:text="@string/optimiser_tdmgbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_tdmgbuutton"/>

            <Button
                android:text="@string/optimiser_dmgebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optimiser_dmgebutton"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:text="@string/optimiser_totalsheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optimiser_totalsheader"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ProgressBar
        android:id="@+id/optimiser_loading_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optimiser_artifacttotal"
        android:stretchColumns="0,1,2"
        android:paddingBottom="16dp">

    </TableLayout>

    <TextView
        android:text="@string/optimiser_sequenceheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optimiser_orderheader"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ProgressBar
        android:id="@+id/optimiser_loading_sequence"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optimiser_artifactsequence"
        android:stretchColumns="0,1,2"
        android:paddingBottom="16dp">

    </TableLayout>

</LinearLayout>